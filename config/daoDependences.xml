<?xml version="1.0" encoding="UTF-8"?>
<root>
  <controllers>
    <!--Présentation des différents controlleurs avec leurs instances à injecter-->
    <controller class="App\Controller\UserController">
      <userdao>
        <dbdao>App\Dao\DbDaoUser</dbdao>
        <!-- classe à charger si choix type db -->
        <xmldao>App\Dao\XmlDaoUser</xmldao>
      </userdao>
    </controller>
    <controller class="App\Controller\ShopController">
      <userdao>
        <dbdao>App\Dao\DbDaoUser</dbdao>
        <xmldao>App\Dao\XmlDaoUser</xmldao>
      </userdao>
      <categorydao>
        <dbdao>App\Dao\DbDaoCategorie</dbdao>
        <xmldao>App\Dao\XmlDaoCategorie</xmldao>
      </categorydao>
      <basketdao>
        <dbdao>App\Dao\DbDaoCategorie</dbdao>
        <xmldao>App\Dao\XmlDaoCategorie</xmldao>
      </basketdao>
      <productdao>
        <dbdao>App\Dao\DbDaoProduit</dbdao>
        <xmldao>App\Dao\XmlDaoProduit</xmldao>
      </productdao>
    </controller>
  </controllers>
  <load>
    <!-- indiquer les controlleurs dont leurs instances doivent être initialisés automatiquement + mode du dao -->
    <controller class="App\Controller\UserController" daoMode="dbdao"/>
    <controller class="App\Controller\ShopController" daoMode="dbdao"/>
  </load>
</root>
